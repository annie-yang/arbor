<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/grey"
    android:id="@+id/arbor">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addTask"
        android:hint="Type here to add a task"
        android:width="350dp"
        android:textColor="#000000"
        android:imeOptions="actionSend"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/addBtn"
        android:layout_alignStart="@+id/addBtn"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tasksView"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/mapBtn"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add Task"
        android:id="@+id/addBtn"
        android:layout_below="@+id/addTask"
        android:layout_centerHorizontal="true"
        android:choiceMode="singleChoice"
        android:width="350dp"
        android:onClick=""/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Click here for Map"
        android:id="@+id/mapBtn"
        android:layout_below="@+id/addBtn"
        android:layout_centerHorizontal="true"
        android:onClick="map"
        android:width="350dp"/>

</RelativeLayout>
