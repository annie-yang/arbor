<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/grey"
    android:id="@+id/arbor">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arbor"
        android:id="@+id/arborText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addTask"
        android:layout_below="@+id/arborText"
        android:layout_marginTop="61dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Type here to add a task"
        android:width="350dp"
        android:imeOptions="actionSend"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tasksView"
        android:layout_marginTop="33dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/addBtn"
        android:layout_alignLeft="@+id/addTask"
        android:layout_alignStart="@+id/addTask" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Task"
        android:id="@+id/addBtn"
        android:layout_below="@+id/addTask"
        android:layout_centerHorizontal="true"
        android:choiceMode="singleChoice"
        android:width="350dp"
        android:onClick=""/>

</RelativeLayout>
